{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018"],
    "outDir": "./dist",
    "module": "commonjs",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
